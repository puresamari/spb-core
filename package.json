    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.0.20",
    "@types/pug": "^2.0.4",
    "@types/resolve": "^1.17.1",
    "@types/rimraf": "^3.0.0",
    "@types/twig": "^1.12.3",
    "@types/ws": "^7.2.6",
    "alpinejs": "^3.3.3",
    "fast-sha256": "^1.3.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.4",
    "tailwindcss": "^1.9.6",
    "three": "^0.121.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.6",
    "typescript-json-schema": "^0.42.0"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@puresamari/ts-bundler": "^0.3.3",
